<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <com.adurosmart.widget.BounceScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/account_set"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/tiao_bg_up">

                    <Button
                        android:id="@+id/btn_3d_desktop"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="Custom Loading"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/system_set"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:id="@+id/btn_facer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="Face"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/center_t"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:id="@+id/btn_ftp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="FTP"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/system_message"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:id="@+id/btn_scrol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="Scrolling"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:id="@+id/dec_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="Ceiling"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:id="@+id/ffmpeg_btn"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="Codec"
                        android:textAllCaps="false"/>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:text="FFmpeg"
                        android:textAllCaps="false"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/tiao_bg_center">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/tiao_bg_bottom">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true" />

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </com.adurosmart.widget.BounceScrollView>
</RelativeLayout>
