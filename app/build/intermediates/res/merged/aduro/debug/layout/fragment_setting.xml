<?xml version="1.0" encoding="utf-8"?>
<com.adurosmart.widget.BounceScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_3d_desktop"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_up"
            android:text="Custom Loading"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_facer"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="Face"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_ftp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="FTP"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_okhttp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="Scrolling"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/dec_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="Ceiling"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_codec"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="Codec"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center"
            android:text="FFmpeg"
            android:textAllCaps="false" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_center" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/tiao_bg_bottom" />

    </LinearLayout>
</com.adurosmart.widget.BounceScrollView>
