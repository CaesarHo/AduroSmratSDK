<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <Button
        android:id="@+id/getIpAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="getIpAddress"/>

    <LinearLayout
        android:id="@+id/ip"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/getIpAddress"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="serviceip:"/>

        <TextView
            android:id="@+id/ip_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/send"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/encrypt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/ip"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="加密后:"/>

        <TextView
            android:id="@+id/encrypt_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/send"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/decode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/encrypt"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="解密后:"/>

        <TextView
            android:id="@+id/decode_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_below="@+id/send"
            android:text=""/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/packet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/decode"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="packet:"/>

        <EditText
            android:id="@+id/packet_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packet"
        android:text="send"/>
    <TextView
        android:id="@+id/receive_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/send"
        android:text="192.168.0.0"/>
    <TextView
        android:id="@+id/local_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/receive_data"
        android:text="192.168.0.0"/>

    <ListView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/local_ip">

    </ListView>

</RelativeLayout>
